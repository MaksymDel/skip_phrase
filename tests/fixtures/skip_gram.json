{
    "dataset_reader": {
      "type": "skip_phrase_lines",
      "window_size": 2,
      "pivot_ngram_degree": 1
    },
    "train_data_path": "tests/fixtures/sentences.txt",
    "validation_data_path": "tests/fixtures/sentences.txt",
    "test_data_path": "tests/fixtures/sentences.txt",
    "model": {
      "type": "skip_phrase",
      "text_field_embedder": {
        "tokens": {
          "type": "embedding",
          "embedding_dim": 10
        }
      },
      "encoder": {
        "type": "boe",
        "embedding_dim": 10,
        "averaged": true
      }
     },
    "iterator": {
      "type": "bucket",
      "sorting_keys": [["pivot_phrase", "num_tokens"]],
      "batch_size": 3
    },

    "trainer": {
      "num_epochs": 4,
      "patience": 10,
      "cuda_device": -1,
      "grad_clipping": 5.0,
      "validation_metric": "-loss",
      "optimizer": {
        "type": "adam"
      }
    }
}